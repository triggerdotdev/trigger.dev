{
  "name": "runtime_tests",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "dependencies": {
    "@hono/node-server": "^1.3.1",
    "@trigger.dev/hono": "workspace:*",
    "@trigger.dev/sdk": "workspace:*",
    "hono": "^3.10.3"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20221111.1",
    "@types/node": "18",
    "@types/supertest": "^2.0.12",
    "bun-types": "^1.0.15",
    "supertest": "^6.3.3",
    "typescript": "^5.3.0",
    "vitest": "^0.34.3",
    "wrangler": "^3.18.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "test": "pnpm run test:wrangler && pnpm run test:bun && pnpm run test:node",
    "test:wrangler": "vitest --run --config ./tests/wrangler/vitest.config.ts",
    "test:bun": "bun test tests/bun",
    "test:node": "vitest --run --config ./tests/node/vitest.config.ts",
    "test:deno": "deno test --no-check --no-config --allow-read --allow-env tests/deno"
  }
}