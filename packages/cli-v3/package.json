{
  "name": "trigger.dev",
  "version": "3.3.1",
  "description": "A Command-Line Interface for Trigger.dev (v3) projects",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/triggerdotdev/trigger.dev",
    "directory": "packages/cli-v3"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "typescript",
    "trigger.dev",
    "workflows",
    "orchestration",
    "events",
    "webhooks",
    "integrations",
    "apis",
    "jobs",
    "background jobs",
    "nextjs"
  ],
  "files": [
    "dist"
  ],
  "bin": {
    "trigger": "./dist/esm/index.js"
  },
  "tshy": {
    "selfLink": false,
    "main": false,
    "module": false,
    "dialects": [
      "esm"
    ],
    "project": "./tsconfig.src.json",
    "exports": {
      "./package.json": "./package.json",
      ".": "./src/index.ts"
    }
  },
  "devDependencies": {
    "@epic-web/test-server": "^0.1.0",
    "@types/gradient-string": "^1.1.2",
    "@types/node": "20.14.14",
    "@types/object-hash": "3.0.6",
    "@types/react": "^18.2.48",
    "@types/resolve": "^1.20.6",
    "@types/rimraf": "^4.0.5",
    "@types/semver": "^7.5.0",
    "@types/source-map-support": "0.5.10",
    "@types/ws": "^8.5.3",
    "cpy-cli": "^5.0.0",
    "execa": "^8.0.1",
    "find-up": "^7.0.0",
    "rimraf": "^5.0.7",
    "ts-essentials": "10.0.1",
    "tshy": "^3.0.2",
    "tsx": "4.17.0",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  },
  "scripts": {
    "typecheck": "tsc -p tsconfig.src.json --noEmit",
    "build": "tshy && pnpm run update-version",
    "dev": "tshy --watch",
    "test:e2e": "vitest --run -c ./e2e/vitest.config.ts",
    "update-version": "tsx ../../scripts/updateVersion.ts"
  },
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "@depot/cli": "0.0.1-cli.2.73.0",
    "@opentelemetry/api": "1.9.0",
    "@opentelemetry/api-logs": "0.52.1",
    "@opentelemetry/exporter-logs-otlp-http": "0.52.1",
    "@opentelemetry/exporter-trace-otlp-http": "0.52.1",
    "@opentelemetry/instrumentation": "0.52.1",
    "@opentelemetry/instrumentation-fetch": "0.52.1",
    "@opentelemetry/resources": "1.25.1",
    "@opentelemetry/sdk-logs": "0.52.1",
    "@opentelemetry/sdk-node": "0.52.1",
    "@opentelemetry/sdk-trace-base": "1.25.1",
    "@opentelemetry/sdk-trace-node": "1.25.1",
    "@opentelemetry/semantic-conventions": "1.25.1",
    "@trigger.dev/build": "workspace:3.3.1",
    "@trigger.dev/core": "workspace:3.3.1",
    "c12": "^1.11.1",
    "chalk": "^5.2.0",
    "cli-table3": "^0.6.3",
    "commander": "^9.4.1",
    "defu": "^6.1.4",
    "dotenv": "^16.4.5",
    "esbuild": "^0.23.0",
    "evt": "^2.4.13",
    "fast-npm-meta": "^0.2.2",
    "gradient-string": "^2.0.2",
    "import-in-the-middle": "1.11.0",
    "import-meta-resolve": "^4.1.0",
    "jsonc-parser": "3.2.1",
    "magicast": "^0.3.4",
    "minimatch": "^10.0.1",
    "mlly": "^1.7.1",
    "nypm": "^0.3.9",
    "object-hash": "^3.0.0",
    "open": "^10.0.3",
    "p-retry": "^6.1.0",
    "partysocket": "^1.0.2",
    "pkg-types": "^1.1.3",
    "resolve": "^1.22.8",
    "semver": "^7.5.0",
    "signal-exit": "^4.1.0",
    "source-map-support": "0.5.21",
    "std-env": "^3.7.0",
    "terminal-link": "^3.0.0",
    "tiny-invariant": "^1.2.0",
    "tinyexec": "^0.3.1",
    "ws": "^8.18.0",
    "xdg-app-paths": "^8.3.0",
    "zod": "3.23.8",
    "zod-validation-error": "^1.5.0"
  },
  "engines": {
    "node": ">=18.20.0"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      }
    }
  }
}
