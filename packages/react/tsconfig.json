{
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "tsup.config.ts"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "lib": ["es2015", "dom"],
    "paths": {
      "@trigger.dev/core": ["../core/src/index"],
      "@trigger.dev/core/*": ["../core/src/*"]
    }
  },
  "exclude": ["node_modules"]
}
