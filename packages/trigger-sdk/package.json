{
  "name": "@trigger.dev/sdk",
  "version": "3.0.0-beta.52",
  "description": "trigger.dev Node.JS SDK",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "tshy": {
    "selfLink": false,
    "main": false,
    "module": false,
    "project": "./tsconfig.build.json",
    "exports": {
      "./package.json": "./package.json",
      ".": "./src/index.ts",
      "./v3": "./src/v3/index.ts",
      "./v3/extensions": "./src/v3/extensions.ts"
    },
    "sourceDialects": [
      "triggerdotdev-source"
    ]
  },
  "scripts": {
    "clean": "rimraf dist",
    "prepare": "tshy && pnpm run update-version",
    "build": "tshy",
    "dev": "tshy --watch",
    "typecheck": "tsc --noEmit",
    "update-version": "tsx ../../scripts/updateVersion.ts"
  },
  "dependencies": {
    "@opentelemetry/api": "1.9.0",
    "@opentelemetry/api-logs": "0.52.1",
    "@opentelemetry/semantic-conventions": "1.25.1",
    "@trigger.dev/core": "workspace:3.0.0-beta.52",
    "chalk": "^5.2.0",
    "cronstrue": "^2.21.0",
    "debug": "^4.3.4",
    "evt": "^2.4.13",
    "msw": "^2.2.1",
    "slug": "^6.0.0",
    "terminal-link": "^3.0.0",
    "ulid": "^2.3.0",
    "uuid": "^9.0.0",
    "ws": "^8.11.0",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/node": "20.14.14",
    "@types/slug": "^5.0.3",
    "@types/uuid": "^9.0.0",
    "@types/ws": "^8.5.3",
    "encoding": "^0.1.13",
    "msw": "^2.2.1",
    "rimraf": "^3.0.2",
    "tshy": "^3.0.2",
    "typed-emitter": "^2.1.0",
    "typescript": "^5.5.4",
    "tsx": "4.17.0"
  },
  "engines": {
    "node": ">=18.20.0"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "triggerdotdev-source": "./src/index.ts",
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/commonjs/index.d.ts",
        "default": "./dist/commonjs/index.js"
      }
    },
    "./v3": {
      "import": {
        "triggerdotdev-source": "./src/v3/index.ts",
        "types": "./dist/esm/v3/index.d.ts",
        "default": "./dist/esm/v3/index.js"
      },
      "require": {
        "types": "./dist/commonjs/v3/index.d.ts",
        "default": "./dist/commonjs/v3/index.js"
      }
    },
    "./v3/extensions": {
      "import": {
        "triggerdotdev-source": "./src/v3/extensions.ts",
        "types": "./dist/esm/v3/extensions.d.ts",
        "default": "./dist/esm/v3/extensions.js"
      },
      "require": {
        "types": "./dist/commonjs/v3/extensions.d.ts",
        "default": "./dist/commonjs/v3/extensions.js"
      }
    }
  }
}
