{
  "$schema": "https://mintlify.com/schema.json",
  "name": "Trigger.dev",
  "openapi": ["/openapi.yml", "/v3-openapi.yaml"],
  "api": {
    "playground": {
      "mode": "simple"
    },
    "maintainOrder": true
  },
  "logo": {
    "dark": "/logo/dark.png",
    "light": "/logo/light.png",
    "href": "https://trigger.dev"
  },
  "favicon": "/images/favicon.png",
  "colors": {
    "primary": "#A8FF53",
    "light": "#A8FF53",
    "dark": "#A8FF53",
    "anchors": {
      "from": "#252630",
      "to": "#252630"
    },
    "background": {
      "light": "#fff",
      "dark": "#121317"
    }
  },
  "theme": "quill",
  "modeToggle": {
    "default": "dark",
    "isHidden": true
  },
  "feedback": {
    "suggestEdit": true,
    "raiseIssue": true,
    "thumbsRating": true
  },
  "topbarCtaButton": {
    "type": "github",
    "url": "https://github.com/triggerdotdev/trigger.dev"
  },
  "topbarLinks": [
    {
      "name": "Community",
      "url": "https://trigger.dev/discord"
    }
  ],
  "redirects": [
    {
      "source": "/v3/feature-matrix",
      "destination": "https://feedback.trigger.dev/roadmap"
    },
    {
      "source": "/v3/upgrading-from-v2",
      "destination": "/guides/use-cases/upgrading-from-v2"
    },
    {
      "source": "/v3/:slug*",
      "destination": "/pages/:slug*"
    }
  ],

  "anchors": [
    {
      "name": "Guides",
      "icon": "book",
      "url": "guides"
    }
  ],
  "navigation": [
    {
      "group": "Getting Started",
      "pages": [
        "pages/introduction",
        "pages/quick-start",
        "pages/limits",
        "pages/changelog",
        "pages/roadmap"
      ]
    },
    {
      "group": "Fundamentals",
      "pages": [
        "pages/trigger-folder",
        "pages/tasks-overview",
        "pages/triggering",
        "pages/apikeys",
        {
          "group": "Task types",
          "pages": ["pages/tasks-regular", "pages/tasks-scheduled"]
        },
        "pages/trigger-config"
      ]
    },
    {
      "group": "Development",
      "pages": ["pages/cli-dev", "pages/run-tests"]
    },
    {
      "group": "Deployment",
      "pages": [
        "pages/deploy-environment-variables",
        "pages/cli-deploy",
        "pages/github-actions",
        {
          "group": "Deployment integrations",
          "pages": ["pages/vercel-integration"]
        }
      ]
    },
    {
      "group": "Writing tasks",
      "pages": [
        "pages/writing-tasks-introduction",
        "pages/logging",
        "pages/errors-retrying",
        {
          "group": "Wait",
          "pages": [
            "pages/wait",
            "pages/wait-for",
            "pages/wait-until",
            "pages/wait-for-event",
            "pages/wait-for-request"
          ]
        },
        "pages/queue-concurrency",
        "pages/versioning",
        "pages/machines",
        "pages/idempotency",
        "pages/reattempting-replaying",
        "pages/tags",
        "pages/notifications",
        "pages/run-usage"
      ]
    },
    {
      "group": "API reference",
      "pages": [
        "pages/management/overview",
        {
          "group": "Tasks API",
          "pages": ["pages/management/tasks/trigger", "pages/management/tasks/batch-trigger"]
        },
        {
          "group": "Runs API",
          "pages": [
            "pages/management/runs/list",
            "pages/management/runs/retrieve",
            "pages/management/runs/replay",
            "pages/management/runs/cancel",
            "pages/management/runs/reschedule"
          ]
        },
        {
          "group": "Schedules API",
          "pages": [
            "pages/management/schedules/list",
            "pages/management/schedules/create",
            "pages/management/schedules/retrieve",
            "pages/management/schedules/update",
            "pages/management/schedules/delete",
            "pages/management/schedules/deactivate",
            "pages/management/schedules/activate",
            "pages/management/schedules/timezones"
          ]
        },
        {
          "group": "Env Vars API",
          "pages": [
            "pages/management/envvars/list",
            "pages/management/envvars/import",
            "pages/management/envvars/create",
            "pages/management/envvars/retrieve",
            "pages/management/envvars/update",
            "pages/management/envvars/delete"
          ]
        },
        {
          "group": "Projects API",
          "pages": ["pages/management/projects/runs"]
        }
      ]
    },
    {
      "group": "Open source",
      "pages": [
        "pages/github-repo",
        "pages/open-source-self-hosting",
        "pages/open-source-contributing"
      ]
    },
    {
      "group": "Troubleshooting",
      "pages": [
        "pages/troubleshooting",
        "pages/upgrading-packages",
        "pages/troubleshooting-alerts",
        "pages/troubleshooting-uptime-status",
        "pages/troubleshooting-github-issues",
        "pages/request-feature"
      ]
    },
    {
      "group": "Help",
      "pages": ["pages/community", "pages/help-slack", "pages/help-email"]
    },
    {
      "group": "Frameworks",
      "pages": ["guides/frameworks/nodejs", "guides/frameworks/nextjs", "guides/frameworks/remix"]
    },
    {
      "group": "Dashboard",
      "pages": ["guides/dashboard/creating-a-project"]
    },
    {
      "group": "Use cases",
      "pages": ["guides/use-cases/upgrading-from-v2"]
    }
  ],
  "footerSocials": {
    "twitter": "https://twitter.com/triggerdotdev",
    "github": "https://github.com/triggerdotdev",
    "linkedin": "https://www.linkedin.com/company/triggerdotdev"
  }
}
