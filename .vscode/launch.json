  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node-terminal",
      "request": "launch",
      "name": "Debug WebApp",
      "command": "pnpm run dev --filter webapp",
      "envFile": "${workspaceFolder}/.env",
      "cwd": "${workspaceFolder}",
      "sourceMaps": true
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Chrome webapp",
      "url": "http://localhost:3030",
      "webRoot": "${workspaceFolder}/apps/webapp/app"
    },
    {
      "type": "node-terminal",
      "request": "launch",
      "name": "Debug BYO Auth",
      "command": "pnpm run byo-auth",
      "envFile": "${workspaceFolder}/references/job-catalog/.env",
      "cwd": "${workspaceFolder}/references/job-catalog",
      "sourceMaps": true
    },
    {
      "type": "node-terminal",
      "request": "launch",
      "name": "Debug V3 Dev CLI",
      "command": "pnpm exec trigger.dev dev --log-level debug",
      "cwd": "${workspaceFolder}/references/v3-catalog",
      "sourceMaps": true
    },
    {
      "type": "node-terminal",
      "request": "launch",
      "name": "Debug V3 Deploy CLI",
      "command": "pnpm exec trigger.dev deploy",
      "cwd": "${workspaceFolder}/references/v3-catalog",
      "sourceMaps": true
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Trigger.dev CLI (v3)",
      "port": 9229,
      "restart": true,
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
