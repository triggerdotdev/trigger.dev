  "version": "0.2.0",
  "configurations": [
    {
      "type": "node-terminal",
      "request": "launch",
      "name": "Debug WebApp",
      "command": "pnpm run dev --filter webapp",
      "envFile": "${workspaceFolder}/apps/webapp/.env",
      "cwd": "${workspaceFolder}",
      "sourceMaps": true
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Chrome webapp",
      "url": "http://localhost:3030",
      "webRoot": "${workspaceFolder}/apps/webapp/app"
    }
  ]
}
