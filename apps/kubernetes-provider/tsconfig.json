{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@trigger.dev/core": ["../../packages/core/src"],
      "@trigger.dev/core/*": ["../../packages/core/src/*"],
      "@trigger.dev/core/v3": ["../../packages/core/src/v3"],
      "@trigger.dev/core/v3/*": ["../../packages/core/src/v3/*"]
    }
  }
}
