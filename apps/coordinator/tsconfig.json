{
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@trigger.dev/core/v3": ["../../packages/core/src/v3"],
      "@trigger.dev/core/v3/*": ["../../packages/core/src/v3/*"],
      "@trigger.dev/core-apps": ["../../packages/core-apps/src"],
      "@trigger.dev/core-apps/*": ["../../packages/core-apps/src/*"]
    }
  }
}
