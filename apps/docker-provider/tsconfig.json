{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@trigger.dev/core/v3": ["../core/src/v3"],
      "@trigger.dev/core/v3/*": ["../core/src/v3/*"],
      "@trigger.dev/core-apps": ["../core-apps/src"],
      "@trigger.dev/core-apps/*": ["../core-apps/src/*"]
    }
  }
}
